---
import BaseLayout from "./baseLayout.astro";
import ProfileHeader from "../components/profile/profileHeader.astro";
import ProfileTabs from "../components/profile/profileTabs.astro";

const { profile, activeTab, pageTitle, noIndex = false } = Astro.props;
---

<BaseLayout title={`${profile.name} | ${pageTitle} | CuCoders`} description={profile.bio} image={profile.avatar_url} noIndex = {noIndex} backUrl="/directorio">
  <ProfileHeader profile={profile} />

  <div
    class="bg-white border border-gray-300 md:mx-auto mb-5 lg:max-w-[58rem] border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 w-full"
  >
    <ProfileTabs activeTab={activeTab} profile={profile} />
    <slot />
  </div>
</BaseLayout>
