import RightDrawer from "../components/rightDrawer.astro";
import JobsSideBar from "../components/jobsSideBar.astro";

const { title, description, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} hasRightSidebar={true}>
  <div class="grid w-full gap-8 grid-cols-1 md:grid-cols-[16rem_1fr] mt-4 md:mt-8">
    <div class="hidden md:block">
      <JobsSideBar />
    </div>
    <div class="px-5 md:px-0">
      <slot />
    </div>
  </div>
</BaseLayout>

