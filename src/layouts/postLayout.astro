---
import BaseLayout from "./baseLayout.astro";
import dayjs from "dayjs";
import "dayjs/locale/es";
import readingTime from "reading-time";

dayjs.locale("es");

const { title, description, pubDate, image, tags } = Astro.props.frontmatter;
const display_date = dayjs(pubDate).format("D MMM");
const stats = readingTime(Astro.props.rawContent());
const read_time = stats.text.replace("read", "");
let banner_syle = "background-image: url(" + image + ")";

const author = Astro.props.url.split("/")[2];
const response = await fetch("https://api.github.com/users/" + author);
const user_data = await response.json();

if (!image) {
  banner_syle = "display: none";
}
---

<BaseLayout title={title} description={description} image={image}>
  <div
    class="bg-white border mx-5 md:mx-auto lg:max-w-[58rem] border-gray-200 rounded-lg mb-5 mt-6 md:mt-12 dark:bg-gray-800 dark:border-gray-700 w-full"
  >
    <div class="bg-cover bg-center h-[15rem] md:h-[22rem] lg:h-[28rem] rounded-t-lg" style={banner_syle}></div>

    <div class="p-8 md:px-15 lg:px-20">
      <div class="mb-5 flex justify-between">
        <a href={user_data.html_url} class="flex items-center space-x-4">
          <img class="w-12 h-12 rounded-full" src={user_data.avatar_url} alt={user_data.name + " avatar"} />
          <div class="font-medium dark:text-white">
            <div>
              {user_data.name}
              <spam class="mx-2 text-gray-700">â€¢</spam>
              <spam class="text-gray-500 font-normal capitalize" time-from-date>
                {display_date}
              </spam>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Software Developer</div>
          </div>
        </a>

        <div class="flex items-center">
          <div class="text-sm hidden md:block text-gray-500 mr-3">{read_time} lectura</div>
          <button
            id="dropdownMenuIconHorizontalButton"
            data-dropdown-toggle="dropdownDotsHorizontal"
            class="inline-flex items-center p-2 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
            type="button"
          >
            <img src="/assets/img/icons/menu-vertical-black.svg" class="h-6 w-6" />
          </button>
        </div>

        <!-- Dropdown menu -->
        <div
          id="dropdownDotsHorizontal"
          class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow w-44 dark:bg-gray-700 dark:divide-gray-600"
        >
          <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconHorizontalButton">
            <li>
              <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Dashboard</a
              >
            </li>
            <li>
              <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Settings</a>
            </li>
            <li>
              <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Earnings</a>
            </li>
          </ul>
          <div class="py-1">
            <a
              href="#"
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white"
              >Separated link</a
            >
          </div>
        </div>
      </div>
      <h1 class="mb-5 text-3xl md:text-4xl font-bold tracking-tight text-gray-900 dark:text-white">
        {title}
      </h1>
      <div class="my-2 flex justify-between">
        <div>
          {
            tags.map((tag) => (
              <a
                href="#"
                class="text-gray-600 bg-white my-1 border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-normal rounded md:text-base text-sm px-1 py-1.5 mr-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
              >
                {"#" + tag}
              </a>
            ))
          }
        </div>
      </div>
      <section class="mb-5 mt-5 prose lg:prose-lg">
        <slot />
      </section>
    </div>
  </div>
</BaseLayout>
