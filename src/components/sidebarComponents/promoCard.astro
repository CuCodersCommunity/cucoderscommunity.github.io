---
const { target = "_blank", id } = Astro.props;
---

<div
  class={"overflow-y-auto rounded-md mb-5 bg-white border-solid border-[1px] border-gray-300 dark:bg-gray-800 dark:border-gray-700 " +
    id}
>
  <a href="#" target={target} class={id + "-link"}>
    <img class={"rounded-t-lg " + id + "-img"} src="" />
    <div class="p-5">
      <h5 class={"mb-2 text-base font-bold tracking-tight text-gray-900 dark:text-white line-clamp-2 " + id + "-title"}></h5>
      <p class={"mb-3 font-normal text-gray-700 dark:text-gray-400 line-clamp-4 " + id + "-desc"}></p>
    </div>
  </a>
</div>
