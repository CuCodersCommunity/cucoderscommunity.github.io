---
import dayjs from "dayjs";
import "dayjs/locale/es";
import { Image } from 'astro:assets';

dayjs.locale("es");

const { event } = Astro.props;

let display_date = `${dayjs(event.data.startDate).format("DD/MM/YY")}`;
if (!isNaN(event.data.endDate.getTime()) && !dayjs(event.data.startDate).isSame(event.data.endDate, "day")) {
  display_date += ` - ${dayjs(event.data.endDate).format("DD/MM/YY")}`;
}

if (!event.data.image){
  event.data.image = "/assets/img/event_default.jpg";
}
---

<a
  href={"/eventos/" + event.slug}
  class="bg-white border border-gray-300 rounded-lg mb-5 dark:bg-gray-800 dark:border-gray-700 w-full"
>
  <div>
    {
      event.data.image && (
        <Image
          class="h-[11rem] md:h-[8rem] lg:h-[11rem] 2xl:h-[13rem] rounded-t-lg object-cover"
          src={event.data.image}
          alt={event.data.name + " logo"}
          format="webp"
          quality={85}
          width={380}
          height={208}
          fit="cover"
          position="center"
        />
      )
    }
  </div>

  <div class="p-5">
    <div>
      <h5 class="mb-2 text-lg line-clamp-2 font-bold tracking-tight text-gray-900 dark:text-white">
        {event.data.name}
      </h5>
    </div>
    <div class="flex items-center mb-2">
      <img src="/assets/img/icons/event-date.svg" class="w-5 h-5 mr-2 inline dark:invert dark:contrast-200 dark:saturate-0" />
      <spam class="text-sm text-gray-500 dark:text-gray-300">{display_date}</spam>
    </div>
    <p class="mb-5 font-normal text-sm text-gray-700 dark:text-gray-200 line-clamp-3">
      {event.data.description}
    </p>
    {
      event.data.location && (
        <div class="my-2 flex justify-center">
          <div class="flex items-center">
            <img src="/assets/img/icons/map.svg" class="w-5 h-5 inline mr-1 dark:invert dark:contrast-200 dark:saturate-0" />
            <spam class="text-sm text-gray-500 dark:text-gray-100">{event.data.location}</spam>
          </div>
        </div>
      )
    }
  </div>
</a>
