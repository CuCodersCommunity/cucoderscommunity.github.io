---
import profileCategories from "../../data/profileCategories.json";
import jobsCategories from "../../data/jobsCategories.json";
import JobCardCategory from "./jobCardCategory.astro";
import ShareThisModal from "../helpers/shareThisModal.astro";
import ReportModal from "../../components/modals/reportModal.astro";
import DropdownMenuVerticalDots from "../ui/dropdownMenuVerticalDots.astro";
import dayjs from "dayjs";

const { job } = Astro.props;

const display_date = dayjs(job.pubDate).format("DD/MM/YY");

if (
  job.organizationWebsite &&
  !job.organizationWebsite.includes("https://") &&
  !job.organizationWebsite.includes("http://")
) {
  job.organizationWebsite = "https://" + job.organizationWebsite;
}
---

<div
  class="bg-white border md:mx-auto mb-5 -mt-6 md:mt-12 lg:max-w-[58rem] border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 w-full"
>
  <div class="p-8 pt-14 md:py-8 md:px-15 lg:px-12">
    <div class="flex justify-between">
      <div class="font-medium dark:text-white grow">
        <div class="flex flex-col md:flex-row md:justify-between items-center">
          <h1
            class="mb-1 text-xl md:text-2xl text-center md:text-left font-bold tracking-tight text-gray-900 dark:text-white"
          >
            {job.title}
          </h1>
          <div class="my-3 md:my-1 flex justify-end">
            <div class="flex items-start ml-3">
              {
                job.url && (
                  <a
                    href={job.url}
                    target="_blank"
                    class="inline-flex items-center p-2 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                    type="button"
                  >
                    <img src="/assets/img/icons/url.svg" class="h-6 w-6 min-w-[1.5rem]" />
                  </a>
                )
              }
              <button
                data-dropdown-toggle="applyDropdown"
                class="inline-flex items-center border p-2 px-4 mx-2 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                type="button"
                >Aplicar
                <img src="/assets/img/icons/business.svg" class="h-6 w-6 min-w-[1.5rem] ml-2 dark:invert dark:contrast-200 dark:saturate-0" />
              </button>
              <DropdownMenuVerticalDots/>
            </div>
          </div>
        </div>

        <div class="flex flex-wrap -ml-2 mb-2 justify-center md:justify-start font-normal text-gray-600">
          {
            job.salary && (
              <>
                <div class="flex items-center mr-2 px-2 py-1 rounded">
                  <img src={`/assets/img/icons/money4.svg`} class="w-5 h-5 inline dark:invert dark:contrast-200 dark:saturate-0" />
                  <p class="ml-1 text-sm dark:text-white"> {job.salary} </p>
                </div>
                <div class="w-0.5 h-5 mr-2 bg-gray-400 place-self-center hidden md:block" />
              </>
            )
          }
          {
            job.freelance && (
              <JobCardCategory
                text={jobsCategories["freelance"].text}
                ico="freelancer"
                url={jobsCategories["freelance"].slug}
              />
            )
          }
          {
            job.fulltime && (
              <JobCardCategory
                text={jobsCategories["fulltime"].text}
                ico="full-time"
                url={jobsCategories["fulltime"].slug}
              />
            )
          }
          {
            job.parttime && (
              <JobCardCategory
                text={jobsCategories["parttime"].text}
                ico="part-time"
                url={jobsCategories["parttime"].slug}
              />
            )
          }
          {
            job.remote && (
              <>
                <div class="w-0.5 h-5 mr-2 bg-gray-400 place-self-center hidden md:block" />
                <JobCardCategory text={jobsCategories["remote"].text} ico="remote" url={jobsCategories["remote"].slug} />
              </>
            )
          }
          {
            job.presential && (
              <>
                <div class="w-0.5 h-5 mr-2 bg-gray-400 place-self-center hidden md:block" />
                <JobCardCategory
                  text={jobsCategories["presential"].text}
                  ico="map"
                  url={jobsCategories["presential"].slug}
                />
              </>
            )
          }
          {
            job.location && (
              <>
                <div class="w-0.5 h-5 mr-2 bg-gray-400 place-self-center hidden md:block" />
                <JobCardCategory text={job.location} ico="map2" />
              </>
            )
          }
          {
            job.relocate && (
              <>
                <div class="w-0.5 h-5 mr-2 bg-gray-400 place-self-center hidden md:block" />
                <JobCardCategory
                  text={jobsCategories["relocate"].text}
                  ico="relocate"
                  url={jobsCategories["relocate"].slug}
                />
              </>
            )
          }
          {
            job.organization && (
              <div class="flex">
                <div class="w-0.5 h-5 mr-2  bg-gray-400 place-self-center hidden md:block" />
                <a href={job.organizationWebsite} target="_blank" class="flex items-center hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 px-2 py-1 rounded">
                  <img src={`/assets/img/icons/company.svg`} class="w-4 h-4 inline dark:invert dark:contrast-200 dark:saturate-0" />
                  <p class="ml-1 text-xs md:text-sm">{job.organization}</p>
                </a>
              </div>
            )
          }
          <div class="flex">
            <div class="w-0.5 h-5 mx-2 bg-gray-400 place-self-center hidden md:block"></div>
            <div class="flex items-center mr-2 px-2 py-1 rounded">
              <img src={`/assets/img/icons/event-date.svg`} class="w-4 h-4 inline dark:invert dark:contrast-200 dark:saturate-0" />
              <p class="ml-1 text-xs md:text-sm dark:text-gray-100">{display_date}</p>
            </div>
          </div>
        </div>

        <div class="flex flex-wrap justify-center md:justify-start">
          {
            job.categories &&
              job.categories.map((category) => (
                <a
                  href={"/empleos/" + profileCategories[category].slug}
                  class="inline my-1 rounded-md hover:bg-gray-100 bg-gray-50 text-gray-800 dark:hover:bg-gray-600 dark:bg-gray-700 dark:text-gray-100 font-normal text-sm py-1 px-2 mr-3 "
                >
                  {profileCategories[category].text}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Dropdown menu -->
<div
  id="dropdownDotsHorizontal"
  class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow w-44 dark:bg-gray-700 dark:divide-gray-600"
>
  <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconHorizontalButton">
    <li>
      <a
        id="shareThisBtn"
        class="block px-4 cursor-pointer py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Compartir</a
      >
    </li>
  </ul>
  <div class="py-1">
    <a
      data-modal-target="reportModal"
      data-modal-toggle="reportModal"
      class="block px-4 cursor-pointer py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white"
      >Reportar</a
    >
  </div>
</div>

<div
  id="applyDropdown"
  class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow dark:bg-gray-700 dark:divide-gray-600"
>
  <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconHorizontalButton">
    {
      job.applyUrl && (
        <li>
          <a
            href={job.applyUrl}
            target="_blank"
            class="block px-4 cursor-pointer py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
          >
            Enlace para Aplicar
          </a>
        </li>
      )
    }
    {
      job.applyTelegramUser && (
        <li>
          <a
            href={`https://t.me/${job.applyTelegramUser}`}
            target="_blank"
            class="block px-4 cursor-pointer py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
          >
            Contactar en Telegram
          </a>
        </li>
      )
    }
    {
      job.applyEmail && (
        <li>
          <button
            id="applyEmailBtn"
            data-email={job.applyEmail}
            class="block w-full text-left px-4 cursor-pointer py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
          >
            Enviar Correo Electrónico
          </button>
        </li>
      )
    }
    {
      job.applyPhone && (
        <li>
          <a
            href={`tel:${job.applyPhone}`}
            target="_blank"
            class="block px-4 cursor-pointer py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
          >
            Tel: {job.applyPhone}
          </a>
        </li>
      )
    }
  </ul>
</div>

<ShareThisModal />
<ReportModal />

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    const { showToast } = await import('../toast/toast.js');
    const applyEmailBtn = document.getElementById('applyEmailBtn');

    if (applyEmailBtn) {
      applyEmailBtn.addEventListener('click', async () => {
        const email = applyEmailBtn.dataset.email;

        if (!email) {
          console.error('Email address not found in data-email attribute.');
          return;
        }

        const mailtoLink = `mailto:${email}`;

        const mailtoWindow = window.open(mailtoLink, '_blank');

        setTimeout(async () => {
          if (!mailtoWindow || mailtoWindow.closed || mailtoWindow.outerHeight === 0) {
            try {
              await navigator.clipboard.writeText(email);
              showToast('¡Email copiado!');
            } catch (err) {
              console.error('Failed to copy email: ', err);
              showToast('Error al copiar el email.', true);
            }
          }
        }, 100); 
      });
    }
  });
</script>
